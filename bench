    :
}

chibi_exec ()
{
    time "${CHIBI}" -m scheme.load -e "(load \"$1\")" < "$2"
}

# -----------------------------------------------------------------------------
# Definitions specific to Chicken5

chicken_comp ()
{
    OPTS="-R r7rs -X r7rs -block -O3 -C -O3 -d0"
    ${CHICKEN_CSC} ${OPTS} $1 -o $2
}

chicken_exec ()
{
    time "$1" < "$2"
}

