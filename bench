    time "${FOMENT}" "$1" < "$2"
}

# -----------------------------------------------------------------------------
# Definitions specific to Gauche

gauche_comp ()
{
    :
}

gauche_exec ()
{
    time "${GAUCHE}" -r7 -b "$1" < "$2"
}

# -----------------------------------------------------------------------------
# Definitions specific to Kawa

