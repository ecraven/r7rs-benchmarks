           ;;
    esac

    {
        echo
        echo '****************************'
        echo Benchmarking ${NAME} on `date` under `uname -a`
    } >> results.${NAME}
    TEMP="/tmp/larcenous/${NAME}"
    mkdir -p "${TEMP}" 2> /dev/null

    for program in $benchmarks ; do
        evaluate $program
    done
done
