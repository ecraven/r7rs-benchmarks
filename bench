# -----------------------------------------------------------------------------
# Definitions specific to Kawa

kawa_comp ()
{
    classname=$(basename -s .scm $1)
    "${KAWA}" --r7rs --no-warn-unused -d out --main -T $classname -C $1
}

kawa_exec ()
{
    classname=$(basename -s .scm $1)
    time "${JAVA}" -cp $KAWAJAR:$(dirname $0)/out $classname < "$2"
}

