# -----------------------------------------------------------------------------
# Definitions specific to TinyScheme

tinyscheme_comp ()
{
    # remove import statement
    sed -i -e 's/^(import (scheme.*)$//g' $1
}

tinyscheme_exec ()
{
    sed 's/^(run-benchmark)$/(with-input-from-file (car *args*) run-benchmark)/' -i "$1"
    time ( ${TINYSCHEME} -1 "$1" "$2" )
}

