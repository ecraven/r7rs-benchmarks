# Definitions specific to Gerbil

gerbil_comp ()
{
    sed -i -e 's/^(run-benchmark)$//' $1
    ${GERBIL} -d $(dirname "$1") -exe -O -prelude "(declare (not safe))" -o "${1%.scm}.exe" "$1"
}

gerbil_exec ()
{
    export GERBIL_HOME=/opt/gerbil-scheme-git/
    time "$1" < "$2"
}

